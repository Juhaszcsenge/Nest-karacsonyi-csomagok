                <input type="checkbox" name="tartalom" value="Barack">Barack<br>      
                <br>            
            </fieldset>      
        </form>
        <textarea placeholder="Írd le még a kívánságodat"cols="50" name="uzenet" form="usrform">
          </textarea>
          <input type="submit"  id="sub"  value="Submit"/>
    </form>
    </form>
